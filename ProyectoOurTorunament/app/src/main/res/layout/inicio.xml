<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#212423">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#000"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="60dp"
            android:src="@mipmap/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_gravity="center"
            android:text="Our Tournament"
            android:fontFamily="serif-monospace"
            android:textColor="#FFF"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subheader"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:background="#212423"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center">
        <Button
            android:id="@+id/Noticias"
            android:layout_width="210dp"
            android:layout_height="38dp"
            android:layout_gravity="top"
            android:background="#000"
            android:text="Noticias"
            android:textColor="#3CBC80"
            android:textSize="18dp"
            />
        <Button
            android:id="@+id/Buscar"
            android:layout_width="210dp"
            android:layout_height="38dp"
            android:layout_gravity="top"
            android:background="#000"
            android:text="Buscar"
            android:textColor="#FFF"
            android:textSize="18dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/subsubheader"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/subheader"
        android:background="#212423"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/ren"
            android:layout_width="208dp"
            android:layout_height="2dp"
            android:layout_gravity="top"
            android:background="#3CBC80"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/subsubheader"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/FrameInicio"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>