<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- HEADER -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:background="#000"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="60dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="OUR TOURNAMENT"
            android:fontFamily="cursive"
            android:textColor="#3CBC80"
            android:background="#000"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/header"
        android:layout_marginTop="0dp"
        android:background="#212423"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="420dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/header"
            android:layout_marginTop="0dp"
            android:background="#212423"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Noticias"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:background="@drawable/secciones_inicio"
                android:text="Noticias"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:onClick="IrANoticias"/>

            <Button
                android:id="@+id/Buscar"
                android:layout_width="210dp"
                android:layout_height="40dp"
                android:layout_gravity="top"
                android:background="@drawable/secciones_inicio_2"
                android:text="Buscar"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:onClick="IrABuscar"/>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/FrameInicio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top" />

        <EditText
            android:id="@+id/texto"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_marginTop="150dp"
            android:background="#FFF"
            android:hint="Buscar Torneos"
            android:textColor="#000" />


    </LinearLayout>

</RelativeLayout>