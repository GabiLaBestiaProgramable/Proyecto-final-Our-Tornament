<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_marginTop="10dp"
    android:background="#212423"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Torneo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Torneo"
        android:textColor="#FFF"
        android:textSize="25dp" />
    <TextView
        android:id="@+id/renglon1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="#3CBC80"
        android:visibility="visible" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#212423"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Titulo"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Titulo"
            android:textColor="#FFF"
            android:textSize="25sp" />
        <ImageView
            android:id="@+id/Destacada"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/estrella" />
    </LinearLayout>



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:foregroundGravity="center"
        app:srcCompat="@drawable/icono_equipo" />
    <TextView
        android:id="@+id/Descripcion"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Descripcion"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Fecha"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Fecha"
        android:textColor="#FFF"
        android:textSize="15sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/renglon"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:background="#3CBC80"
        android:visibility="visible" />


</LinearLayout>